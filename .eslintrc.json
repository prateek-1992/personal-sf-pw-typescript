// .eslintrc.json
{
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "parserOptions": {
      "project": "tsconfig.json", // Point to your tsconfig.json file
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "globals": {
      "browser": true,
      "context": true,
      "page": true
      // Add any other Playwright globals here
    },
    "rules": {
      // Add any specific rules or overrides here
      "no-unused-vars":"warn"

    }
  }
  